{% extends 'account/layout.html.twig' %}

{% block title %}Orders{% endblock %}

{% block content %}
<div class="row">
    <div class="col">
        <h1>Orders</h1>
        {% if app.user.orders %}
            <table class="table">
                <thead>
                <tr>
                    <th>NÂ°</th>
                    <th>State</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.state|capitalize }}</td>
                        <td>{{ order.createdAt|date('m/d/Y', false) }}</td>
                        <td>{{ (order.total / 100)|format_currency('EUR') }}</td>
                        <td><a href="{{ path('app_account_order', {'id' : order.id}) }}">See it</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            Empty
        {% endif %}
    </div>
</div>
{% endblock %}
