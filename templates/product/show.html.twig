{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="{{ product.image }}" alt="{{ img_path(product.image) }}" class="img-fluid img-thumbnail" loading="lazy">
        </div>
        <div class="col-md-6 my-auto">
            <h1>{{ product.name }}</h1>
            {{ product.description|raw }}
            <p class="mt-3">{{ (product.price / 100)|format_currency('EUR') }}</p>
            <a href="{{ path('app_cart_add', {id : product.id}) }}" class="btn btn-primary">Add to cart</a>
        </div>
    </div>


    <div class="mt-5 mb-3 p-3 text-center">
        <h2 class="display-5">Our best products :</h2>
    </div>
    <div class="row">
        {% for product in products %}
            <article class="col-md-4">
                {{ include('components/_product_show.html.twig') }}
            </article>
        {% endfor %}
    </div>
</div>
{% endblock %}
